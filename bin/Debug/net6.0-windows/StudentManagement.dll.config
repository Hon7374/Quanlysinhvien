<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <connectionStrings>
    <!--
    Cấu hình kết nối SQL Server
    Chỉnh sửa Data Source theo máy chủ SQL của bạn:
    - "." hoặc "(local)" cho SQL Server local
    - "localhost\SQLEXPRESS" cho SQL Express
    - "tên_máy_chủ" cho máy chủ remote
    -->
    <add name="StudentManagementDB"
         connectionString="Data Source=.;Initial Catalog=StudentManagementDB;Integrated Security=True;TrustServerCertificate=True"
         providerName="System.Data.SqlClient"/>

    <!--
    Alternative connection string with SQL Server Authentication:
    <add name="StudentManagementDB"
         connectionString="Data Source=.;Initial Catalog=StudentManagementDB;User Id=sa;Password=your_password;TrustServerCertificate=True"
         providerName="System.Data.SqlClient"/>
    -->
  </connectionStrings>

  <appSettings>
    <add key="ApplicationName" value="Hệ thống Quản lý Sinh viên"/>
    <add key="Version" value="1.0.0"/>
  </appSettings>
</configuration>
